<!doctype html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<title>Page introuvable :(</title>
	<link rel="stylesheet" type="text/css" href="./04_css/reset.css">
	<link rel="stylesheet" type="text/css" href="./04_css/style.css">
	<style>
		html { padding: 30px 10px; font-size: 20px; line-height: 1.4; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
		.cont { max-width: 500px; _width: 500px; padding: 20px 20px 40px; border: 1px solid #b3b3b3; border-radius: 4px; margin: 0 auto; box-shadow: 0 1px 10px #a7a7a7, inset 0 1px 0 #fff; background: #fcfcfc; }
		h1 { margin: 0 10px; font-size: 50px; text-align: center; }
		h1 span { color: #bbb; }
		h3 { margin: 1.5em 0 0.5em; }
		p { margin: 1em 0; }
		ul { padding: 0 0 0 40px; margin: 1em 0; }
		.container { max-width: 380px; _width: 380px; margin: 0 auto; }
	</style>
	<script type="text/javascript">
		function changer_langue(lng)
		{
			if(lng=="en")
			{
				document.getElementById('txt_en').style.display = "block";
				document.getElementById('txt_fr').style.display = "none";
				document.getElementById('txt_es').style.display = "none";
				document.getElementById('txt_pt').style.display = "none";
			}
			else
			{
				if(lng=="fr")
				{
					document.getElementById('txt_en').style.display = "none";
					document.getElementById('txt_fr').style.display = "block";
					document.getElementById('txt_es').style.display = "none";
					document.getElementById('txt_pt').style.display = "none";
				}
				else
				{
					if(lng=="pt")
					{
						document.getElementById('txt_en').style.display = "none";
						document.getElementById('txt_fr').style.display = "none";
						document.getElementById('txt_es').style.display = "none";
						document.getElementById('txt_pt').style.display = "block";
					}
					else
					{
						document.getElementById('txt_en').style.display = "none";
						document.getElementById('txt_fr').style.display = "none";
						document.getElementById('txt_es').style.display = "block";
						document.getElementById('txt_pt').style.display = "none";
					}
				}
			}
		}
	</script>
</head>
<body>
	<div id="txt_en" style="display:block">	
		<div class="cont">
			<div class="container">
				<div id="colorbox">
					<div style="float:right">
						<table border="0">
							<tr>
								<td><img src="http://www.sudplanete.net/images/drapeaux/gb.gif" onClick="changer_langue('en')" style="cursor:pointer"></td>
